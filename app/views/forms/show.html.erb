<form id='postcard-data' action="http://www.doglight.co.uk/postcards" method="post">
<p><input style='width: 100%;' placeholder='your email address' type='text' name='from'/></p>
<p><input style='width: 100%;' placeholder='email this postcard to' type='text' name='to' /></p>
<p><textarea style='width: 100%; height: 100px;' placeholder='your message' name='message'></textarea></p>
<input type="submit" value="send this postcard"/>
</form>
<script src="https://s3-eu-west-1.amazonaws.com/blakecards/jquery-1.6.2.min.js"></script>
<script src="https://s3-eu-west-1.amazonaws.com/blakecards/jquery.blockUI.js"></script>
<script>
	$("#postcard-data").submit(function(){
		$(this).block({message: 'Blake is sending your postcard now',
						css: {border: 'none', background: 'none'},
						overlayCSS:{backgroundColor: '#ccc'}})
	});
	
	<% if @message %>
		$(this).block({message: <%= "#{@message}" %>,
						css: {border: 'none', background: 'none'},
						overlayCSS:{backgroundColor: '#cfc',
						timeout: 3000}})
	<% end %>
	
</script>


